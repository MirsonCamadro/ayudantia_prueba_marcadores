products

<div id="product_form"></div> 
<div id="product_buton">
    <%= link_to "Nuevo producto", new_product_path, class: "btn btn-success", remote: true  %>
</div> 

<div id="product_show"></div> 

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Product type</th>
    </tr>
  </thead>
  <tbody id="product-table">
    <% @products.each do |product| %>
        <tr id="product-<%= product.id %>">  
            <th scope="row"><%= product.id %></th>
            <td><%= product.name %> </td>
            <td><%= product.category.name %> </td>
            <td><%= product.product_type.name %> </td>
            <td><%= link_to 'Show', product, remote: true, class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_product_path(product), remote: true, class: "btn btn-success"  %></td>
            <td><%= link_to 'Destroy', product, method: :delete, remote: true, class: "btn btn-warning" , data: { confirm: 'Are you sure?' } %></td> 
        </tr>
    <% end %>
  </tbody>
</table>

