<tr id="product-<%= product.id %>">  
    <th scope="row"><%= product.id %></th>
    <td><%= product.name %> </td>
    <td><%= product.category.name %> </td>
    <td><%= product.product_type.name %> </td>
    <td><%= link_to 'Show', product, remote: true, class: "btn btn-info" %></td>
    <td><%= link_to 'Edit', edit_product_path(product), remote: true, class: "btn btn-success"  %></td>
    <td><%= link_to 'Destroy', product, method: :delete, remote: true, class: "btn btn-warning" , data: { confirm: 'Are you sure?' } %></td> 
</tr>