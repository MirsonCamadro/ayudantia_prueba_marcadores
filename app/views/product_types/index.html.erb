  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    <% @product_types.each do |product_type| %>
        <tr id="product-<%= product_type.id %>">  
            <th scope="row"><%= product_type.id %></th>
            <td><%= product_type.name %> </td>
        </tr>
    <% end %>
  </tbody>
</table>
